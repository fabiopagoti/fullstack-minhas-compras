<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="hayamax.aluno0.minhas_compras.controller.S1" displayBlock="true">
	<Page id="page" title="{i18n>s1_title}">
		<subHeader>
			<Toolbar width="100%" id="toolbar1">
				<content>
					<SearchField xmlns="sap.m" liveChange="onSearch" placeholder="{i18n>s1_searchfield_placeholder}"/>
				</content>
			</Toolbar>
		</subHeader>
		<content>
			<List noDataText="{i18n>list_empty}" id="list" items="{/Headers}" itemPress="onItemPress">
				<items>
					<ObjectListItem 
						type="Active" 
						title="{path:'SupplierName', formatter: '.formatador.toUpperCase' }" 
						number="{GrossAmount}" 
						numberUnit="{CurrencyCode}" 
						intro="{PoId}"
						numberState="{= ( ${GrossAmount} > 15000 ) ? 'Error': 'Success' }"
						>
						<attributes>
							<ObjectAttribute title="{i18n>created_at}" 
								text="{
									path: 'CreatedAt', 
									type: 'sap.ui.model.type.Date' ,
									formatOptions: {
										style: 'medium',
										UTC: true
									}
								}"/>
						</attributes>
					</ObjectListItem>
				</items>
			</List>
		</content>
	</Page>
</mvc:View>